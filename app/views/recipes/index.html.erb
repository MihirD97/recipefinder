<h1>Searching for - <%= @search_term %></h1>
<table border = "1">
	<tr>
		<th>Image</th>
		<th>Name</th>
		<th>Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
	<tr class = "resize">
		<td><%= link_to image_tag(recipe["image_url"]) , recipe["source_url"] %></td>
		<td><%= link_to recipe["title"].sanitize , recipe["source_url"] %></td>
		<td><%= recipe["social_rank"] %></td>
	</tr>
	<% end %>
</table>
